{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:flowtype/recommended"
    ],
    "plugins": [
        "flowtype"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "comma-dangle": [
            "error",
            "only-multiline"
        ]
    }
}